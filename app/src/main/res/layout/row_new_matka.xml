            <RelativeLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1.4"
                    android:src="@drawable/play_button"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="2.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
<!--                    <ImageView-->
<!--                        android:src="@drawable/ic_timer"-->
<!--                        android:layout_weight="1"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"/>-->
                    <RelativeLayout
                        android:layout_weight="3.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/matka_open_bid_Time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/greenColor"
                                android:textSize="8dp" />

                            <TextView
                                android:id="@+id/matka_close_bid_Time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:paddingLeft="2dp"
                                android:text=""
                                android:textColor="@color/greenColor"
                                android:textSize="8dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </RelativeLayout>
                    <ImageView
                        android:src="@drawable/pocket_watch"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:tint="@color/black"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_weight="2.2"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/matkaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="MORNING KUBER"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold|italic" />
                <RelativeLayout
                    android:id="@+id/rLayoutNumbers"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"
                    android:layout_below="@id/rLayoutBidsTime"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/rl_anim"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/matka_starting_Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"


                            android:textColor="@color/number_color"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/matka_dess1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/matka_starting_Number"

                            android:paddingLeft="2dp"
                            android:text="-"
                            android:textColor="@color/number_color"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/matka_res_Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/matka_dess1"

                            android:text="00"
                            android:textColor="@color/number_color"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/matka_dess2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/matka_res_Number"

                            android:paddingLeft="2dp"
                            android:text="-"
                            android:textColor="@color/number_color"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/matka_end_Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/matka_dess2"

                            android:text="000"
                            android:textColor="@color/number_color"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/matka_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/matka_end_Number"


                            android:text="578"
                            android:textColor="@color/play2"
                            android:textSize="8dp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                    </RelativeLayout>
                </RelativeLayout>
                <TextView
