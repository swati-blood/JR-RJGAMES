<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jrgames.AddPointsFragment"
    android:background="@drawable/gradient_bakcground"
  >


    <RelativeLayout
        android:id="@+id/relWallet_1"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/relWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:padding="20dp">

            <ImageView
                android:id="@+id/w_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_account_balance_wallet_black_24dp"
                />
            <TextView
                android:id="@+id/wallet_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/w_img"
                android:paddingRight="5dp"
                android:text="200"
                android:drawableLeft="@drawable/icons8_rupee_24px"

                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="20dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relWallet"
            android:gravity="center_vertical"
           >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_account_balance_wallet_black_24dp" />



        <EditText
            android:id="@+id/etRequstPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/shape2"
            android:backgroundTint="@color/white"
            android:textSize="18dp"
            android:padding="10dp"
            android:hint="Enter Points"
            android:textCursorDrawable="@drawable/cursor_pointer"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginRight="10dp"

            android:layout_marginTop="10dp"
            />
        </RelativeLayout>
        <Button
            android:id="@+id/add_Request"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add Request"
            android:textAllCaps="false"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_buttons"
            android:backgroundTint="@color/white"
            android:layout_below="@id/linerLayout"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"

            />
    </RelativeLayout>
</RelativeLayout>