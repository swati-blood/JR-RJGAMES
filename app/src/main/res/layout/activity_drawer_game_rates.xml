<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.rjgames.DrawerGameRates">
    <include layout="@layout/background_layout"/>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"
            android:textSize="30dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Rates"
                android:textSize="20dp"
                android:textColor="@color/white"

                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"

                />


        </RelativeLayout>



    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/circle"
        android:layout_below="@+id/toolbar"
        android:paddingBottom="35dp"
       >

            <TextView
                android:id="@+id/text1"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:text="GAME RATES"/>
        <View
            android:id="@+id/line1"
            android:layout_below="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jannat_recycler"
            android:layout_below="@id/line1"
            android:background="@color/txt_color"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            />
        <View
            android:id="@+id/line2"
            android:layout_below="@+id/jannat_recycler"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
            <TextView
                android:id="@+id/text2"
                android:layout_below="@+id/jannat_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:textStyle="bold|italic"

                android:text="NAGPUR STARLINE GAME RATES"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/starline_recycler"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_below="@+id/text2"/>


</RelativeLayout>
</RelativeLayout>