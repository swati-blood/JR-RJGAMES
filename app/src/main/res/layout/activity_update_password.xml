<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.rjgames.UpdatePasswordActivity">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/back_24px"
        android:layout_width="@dimen/_30sdp"
        android:tint="@color/colorPrimaryDark"
        android:layout_height="@dimen/_20sdp"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/appLogo"
               android:layout_width="250dp"
               android:layout_height="250dp"
               android:src="@drawable/logo2"
               android:layout_gravity="center"
               android:padding="20dp"
               android:layout_marginTop="-10dp"
               android:layout_centerHorizontal="true"


               />

           <RelativeLayout
               android:id="@+id/rel_gen"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="-30dp"
               android:layout_below="@id/appLogo">

               <RelativeLayout
                   android:id="@+id/relativeLayout2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="30dp"
                   android:padding="0dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   >

                   <ImageView
                       android:id="@+id/imageViewUserIcon"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       app:srcCompat="@drawable/ic_assignment_ind_black_24dp"
                       android:visibility="gone"
                       android:padding="5dp"
                       android:tint="@android:color/white"/>

                   <EditText
                       android:id="@+id/et_pass"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@id/imageViewUserIcon"
                       android:padding="10dp"
                       android:layout_marginTop="0dp"
                       android:textCursorDrawable="@drawable/cursor_pointer"
                       android:layout_toRightOf="@id/imageViewUserIcon"
                      android:background="@drawable/edittextcorner"
                       android:drawableLeft="@drawable/key_24px"
                       android:drawableTint="@color/colorPrimary"
                       android:drawablePadding="10dp"
                       android:hint="Password"
                       android:inputType="textPassword"
                       android:textSize="16dp"
                       android:textColor="@color/colorPrimaryDark"
                       android:textColorHint="@color/colorPrimaryDark"/>
               </RelativeLayout>

               <RelativeLayout
                   android:id="@+id/relativeLayout3"
                   android:layout_below="@id/relativeLayout2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="0dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"


                   >
                   <ImageView
                       android:id="@+id/imageViewUserIcon2"
                       android:layout_width="40dp"

                       android:layout_height="40dp"
                       app:srcCompat="@drawable/ic_assignment_ind_black_24dp"
                       android:visibility="gone"
                       android:padding="5dp"
                       android:tint="@android:color/white"/>

                   <EditText
                       android:id="@+id/et_con_pass"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@id/imageViewUserIcon2"
                       android:padding="10dp"
                       android:layout_marginTop="0dp"
                       android:layout_toRightOf="@id/imageViewUserIcon2"
                       android:textCursorDrawable="@drawable/cursor_pointer"
                     android:background="@drawable/edittextcorner"
                       android:inputType="textPassword"
                       android:drawableLeft="@drawable/key_24px"
                       android:drawableTint="@color/colorPrimary"
                       android:drawablePadding="10dp"
                       android:hint="Confirm Password"
                       android:textSize="16dp"
                       android:textColor="@color/colorPrimaryDark"
                       android:textColorHint="@color/colorPrimaryDark"/>
               </RelativeLayout>




               <Button
                   android:id="@+id/btn_update"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Update Password"
                   android:background="@drawable/gradient_button"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:layout_marginTop="20dp"
                   android:layout_below="@id/relativeLayout3"/>

           </RelativeLayout>



       </LinearLayout>
   </ScrollView>
</RelativeLayout>
